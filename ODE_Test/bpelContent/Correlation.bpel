<!-- Correlation BPEL Process [Generated by the Eclipse BPEL Designer] -->
<!-- Date: Wed Feb 12 17:27:52 EET 2014 -->
<bpel:process name="Correlation"
         targetNamespace="http://www-inf.it-sudparis.eu/~nguyen_n/teaching_assistant/bpel/using_correlation_sets_in_bpel_processes"
         suppressJoinFailure="yes"
         xmlns:tns="http://www-inf.it-sudparis.eu/~nguyen_n/teaching_assistant/bpel/using_correlation_sets_in_bpel_processes"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema"
         >

    <!-- Import the client WSDL -->
	<bpel:import location="CorrelationArtifacts.wsdl" namespace="http://www-inf.it-sudparis.eu/~nguyen_n/teaching_assistant/bpel/using_correlation_sets_in_bpel_processes" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:Correlation"
                     myRole="CorrelationProvider"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:CorrelationRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:CorrelationResponseMessage">
            <bpel:from>
                <bpel:literal xml:space="preserve">
	                <tns:CorrelationResponse>
	  					<tns:result>0</tns:result>
					</tns:CorrelationResponse>
				</bpel:literal>
            </bpel:from>
        </bpel:variable>
		<bpel:variable name="i" type="xsd:int">
            <bpel:from>
                <bpel:literal xml:space="preserve">1</bpel:literal>
            </bpel:from>
        </bpel:variable>                  
    </bpel:variables>
    
    <!-- ================================================================= -->
    <!-- CORRELATION SETS                                                  -->
    <!-- ================================================================= -->
	<bpel:correlationSets>
		<bpel:correlationSet name="CS" properties="tns:MyCS"/>
	</bpel:correlationSets>	

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">    
        
        <bpel:receive name="receiveInput"
        		 partnerLink="client"
                 portType="tns:Correlation"
                 operation="process" variable="input"
                 createInstance="yes">
                 <bpel:correlations>
                	<bpel:correlation set="CS" initiate="yes"/>
            	 </bpel:correlations>
        </bpel:receive>
                 
        <bpel:assign name="Assign">
            <bpel:copy>
                <bpel:from>
                <bpel:literal>
                <tns:CorrelationResponse>
 				<tns:result>0</tns:result>
				</tns:CorrelationResponse>
				</bpel:literal>
				</bpel:from>
                <bpel:to variable="output" part="payload"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:input]]></bpel:query>
                </bpel:from>
                <bpel:to part="payload" variable="output">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                        <![CDATA[tns:result]]>
                    </bpel:query>
                </bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from>
                <bpel:literal>1</bpel:literal>
				</bpel:from>
                <bpel:to variable="i"/>
            </bpel:copy>
          </bpel:assign>

        
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:Correlation"
               operation="process" 
               variable="output">
               <bpel:correlations>
                	<bpel:correlation set="CS" initiate="no"/>
               </bpel:correlations>
         </bpel:reply>
         
         <bpel:assign name="Assign1">
            <bpel:copy>
                <bpel:from expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                    <![CDATA[$i+2]]>
                </bpel:from>
                <bpel:to variable="i"></bpel:to>
            </bpel:copy>
        </bpel:assign>
         
         <bpel:receive name="Receive"
        		 partnerLink="client"
                 portType="tns:Correlation"
                 operation="process" variable="input">
                 <bpel:correlations>
                	<bpel:correlation set="CS" initiate="no"/>
              	 </bpel:correlations>
         </bpel:receive>
         
         <bpel:assign name="Assign2">
            <bpel:copy>
                <bpel:from expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                    <![CDATA[$input.payload/tns:input+$i]]>
                </bpel:from>
                <bpel:to part="payload" variable="output">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
         
         <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:Correlation"
               operation="process" 
               variable="output">
               
         </bpel:reply>
    </bpel:sequence>
</bpel:process>

